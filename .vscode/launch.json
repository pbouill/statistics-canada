{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Enum Generator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/wds_enum_gen.py",
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v"],
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}"
        }
    ]
}
