{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate WDS Enums (All)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["tools/cli/wds_enum_gen.py", "--type", "all", "--verbose"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Generate ProductID Enums",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["tools/cli/wds_enum_gen.py", "--type", "product", "--verbose"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Generate CodeSet Enums",
            "type": "shell",
