{
    "python.defaultInterpreterPath": "./.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.terminal.executeInFileDir": false,
    "python.testing.pytestArgs": [
        "-v",
        "./tests",
        "--tb=short"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}",
    "python.envFile": "${workspaceFolder}/.env",
    "python.analysis.aiCodeActions": {
        "addMissingImports": true,
        "addMissingParameterTypeHints": true,
        "addMissingReturnTypeHints": true,
        "addMissingVariableTypeHints": true,
        "addMissingMethodTypeHints": true,
        "addMissingClassTypeHints": true
    },
    "terminal.integrated.env.linux": {
        "PYTHON_GIL": "0"
    },
    "chat.mcp.serverSampling": {
        "statistics-canada/.vscode/mcp.json: statscan": {
            "allowedModels": [
                "copilot/gpt-4.1",
                "copilot/claude-3.5-sonnet",
                "copilot/claude-3.7-sonnet",
                "copilot/claude-3.7-sonnet-thought",
                "copilot/claude-sonnet-4",
                "copilot/gemini-2.0-flash-001",
                "copilot/gemini-2.5-pro",
                "copilot/gpt-4o",
                "copilot/gpt-5",
                "copilot/gpt-5-mini",
                "copilot/o3-mini",
                "copilot/o4-mini"
            ]
        }
    },
    "editor.formatOnPaste": true
}
